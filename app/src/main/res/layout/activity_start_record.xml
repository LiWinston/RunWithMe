<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <!-- 顶部返回按钮 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@android:color/black" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/btn_back"
        android:layout_marginTop="10dp" />

    <!-- 地图占位 -->
    <ImageView
            android:id="@+id/iv_map"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="40dp"
            android:src="@drawable/map"
            android:scaleType="centerCrop"
            android:contentDescription="Map placeholder" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_map"
        android:layout_marginTop="50dp"
        android:text="▶️"
        android:textSize="36sp"
        android:backgroundTint="#88FFFFFF"
        android:contentDescription="Record Button" />


    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#33FFFFFF">

        <!-- Home -->
        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            app:tint="@android:color/black" />

        <!-- Trophy (用 publish 代替，缺少 trophy 资源) -->
        <ImageButton
            android:id="@+id/nav_trophy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_group"
            app:tint="@android:color/black" />

        <!-- Record (当前页面) -->
        <ImageButton
            android:id="@+id/nav_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_workout"
            app:tint="@android:color/black" />

        <!-- List (用 search 代替，缺少 list 资源) -->
        <ImageButton
            android:id="@+id/nav_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_history"
            app:tint="@android:color/black" />

        <!-- Profile -->
        <ImageButton
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile"
            app:tint="@android:color/black" />
    </LinearLayout>

</RelativeLayout>
