<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 统计卡片区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 统计数据 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvWeekDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18.21 km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvWeekDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1hrs 23mins"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pace"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvWeekPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5'30&quot; /km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvWeekCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="893 kcal"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 周图表区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            style="@style/StatsCardStyle"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本周运动量"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- TODO: 这里应该是一个柱状图显示每天的运动量 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="柱状图占位\n(Mon Tue Wed Thu Fri Sat Sun)"
                android:gravity="center"
                android:textColor="#999999" />

        </LinearLayout>

        <!-- 运动记录列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week's Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWeekWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Personal Fitness Trainer卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/StatsCardStyle"
            android:layout_marginTop="24dp"
            android:background="@drawable/trainer_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="#9C27B0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal Fitness Trainer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginStart="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGenerateWeekAdvice"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Get Advice"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/holo_purple"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbAdviceLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvWeekAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click 'Get Advice' to receive personalized fitness recommendations based on your week's performance and goals."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
