<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 统计卡片区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行：距离和时长 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- 距离卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvTotalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6.10 km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <!-- 时长卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvTotalDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28mins"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第二行：配速和卡路里 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 配速卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_ff"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pace"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvTotalPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5'42\" /km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <!-- 卡路里卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:layout_gravity="start"
                        android:layout_marginBottom="8dp"
                        app:tint="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        style="@style/StatsLabelText" />

                    <TextView
                        android:id="@+id/tvTotalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="291 kcal"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 运动记录列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- 记录列表标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 运动记录RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWorkoutRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Personal Fitness Trainer卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/StatsCardStyle"
            android:layout_marginTop="24dp"
            android:background="@drawable/trainer_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Fitness Trainer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Generating Insights, based on this specific workout of this person"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
