<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 统计卡片区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行：距离和时长 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- 距离卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/distance"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            style="@style/StatsLabelText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6.10 km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <!-- 时长卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/duration"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            style="@style/StatsLabelText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28mins"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第二行：配速和卡路里 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 配速卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginEnd="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/pace"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pace"
                            style="@style/StatsLabelText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5'42&quot; /km"
                        style="@style/StatsNumberText" />

                </LinearLayout>

                <!-- 卡路里卡片 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/StatsCardStyle"
                    android:layout_marginStart="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/kcal"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="4dp"
                            app:tint="#666666" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            style="@style/StatsLabelText" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="291 kcal"
                        style="@style/StatsNumberText" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 运动记录列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- 记录列表标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- 运动记录RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWorkoutRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

        <!-- Personal Fitness Trainer卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/StatsCardStyle"
            android:layout_marginTop="24dp"
            android:background="@drawable/trainer_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="#9C27B0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Personal Fitness Trainer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#9C27B0"
                    android:layout_marginStart="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGenerateTodayAdvice"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Get Advice"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/holo_purple"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbAdviceLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTodayAdvice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click 'Get Advice' to receive personalized fitness recommendations based on your today's performance and goals."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
