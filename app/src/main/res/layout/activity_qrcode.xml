<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_home_gradient"
    android:padding="24dp">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/tv_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Code"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- 描述文字 -->
    <TextView
        android:id="@+id/tv_qr_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- 二维码卡片（用于显示生成的QR码）或相机预览（用于扫描） -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="24dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 二维码图片（显示模式） -->
            <LinearLayout
                android:id="@+id/layout_qr_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="QR Code" />

            </LinearLayout>

            <!-- 相机预览（扫描模式） -->
            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcode_scanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_qr_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#666666"
            android:background="@drawable/btn_remind_like"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_qr_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share QR Code"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4DB6AC"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>

