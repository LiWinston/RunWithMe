<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E0F2F1">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <!-- 头像 -->
        <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile"
                android:contentDescription="Member avatar" />

        <!-- 成员信息 -->
        <LinearLayout
                android:id="@+id/member_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_avatar"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            <TextView
                    android:id="@+id/tv_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0km / 0%"
                    android:textSize="14sp"
                    android:textColor="#666666" />
        </LinearLayout>

        <!-- 操作按钮容器：提醒 与 点赞 -->
        <LinearLayout
                android:id="@+id/actions_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center">

            <!-- 提醒按钮 -->
            <LinearLayout
                    android:id="@+id/btn_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_remind_like"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/iv_remind_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/group_remind"
                        android:contentDescription="Remind icon" />

                <TextView
                        android:id="@+id/tv_remind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Remind 0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <!-- 间距 -->
            <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

            <!-- 点赞按钮 -->
            <LinearLayout
                    android:id="@+id/btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_remind_like"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/iv_like_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/group_like"
                        android:contentDescription="Like icon" />

                <TextView
                        android:id="@+id/tv_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Like 0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>