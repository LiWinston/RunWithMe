        <activity
            android:name=".record.RecordingActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <!-- gsh PreRecordActivity -->
        <activity
            android:name=".record.PreRecordActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <!-- gsh FinishActivity -->
        <activity
            android:name=".record.FinishActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <!-- Weather Expanded Activity -->
        <activity
            android:name=".weather.ui.WeatherExpandedActivity"
            android:exported="false"
            android:screenOrientation="portrait">
        </activity>

        <!-- gsh StartActivity -->
